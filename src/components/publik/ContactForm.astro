---
// src/components/ContactForm.astro
---
<form class="mt-8 max-w-md mx-auto">
    <div class="mb-4">
      <input type="text" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600" placeholder="Nama">
    </div>
    <div class="mb-4">
      <input type="email" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600" placeholder="Email">
    </div>
    <div class="mb-4">
      <textarea class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600" rows="4" placeholder="Pesan"></textarea>
    </div>
    <button type="submit" class="w-full px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">Kirim</button>
  </form>
  