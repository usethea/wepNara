---
import NavItem from "./NavItem.astro"
import NavSubItem from "./NavSubItem.astro"
import navs from "../../data/navs.json";

const logoImage = "/images/logo_nara_hitam.svg";
const logoText = "Nara Seungit Sadayana";

---
<div class="drawer">
    <input id="my-drawer-3" type="checkbox" class="drawer-toggle" />
    <div class="drawer-content flex flex-col">
      <!-- Navbar -->
      <div class="navbar bg-base-100 w-full">
        <div class="flex-none lg:hidden">
          <label for="my-drawer-3" aria-label="open sidebar" class="btn btn-square btn-ghost">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              class="inline-block h-6 w-6 stroke-current">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </label>
        </div>
        <div class="mx-2 flex-1 px-2"><a href="/" class="btn btn-ghost text-xl"><figure><img src={logoImage} alt={logoText} width="160px" /></figure></a></div>
        <div class="hidden flex-none lg:block">
          <ul class="menu menu-horizontal">
            <!-- Navbar menu content here -->
            {navs.map(nav => (
                <li>
                    {nav.isDropdown ? (
                        <details>
                            <summary>{nav.name}</summary>
                            <ul class="p-2">
                                {nav.subNav.map(sub => (
                                    <li><a href={sub.path}>{sub.name}</a></li>
                                ))}
                            </ul>
                        </details>
                    ) : (
                        <a href={nav.path}>{nav.name}</a>  
                    )}
                </li>
            ))}
          </ul>
        </div>
      </div>

    </div>
    <div class="drawer-side">
      <label for="my-drawer-3" aria-label="close sidebar" class="drawer-overlay"></label>
      <ul class="menu bg-base-200 min-h-full w-80 p-4">
        <!-- Sidebar content here -->
        {navs.map(nav => (
            <li class="justify-between">
                {nav.isDropdown ? (
                    <a href={nav.path}>{nav.name}</a>
                    <ul class="p-2">
                        {nav.subNav.map(sub => (
                            <li><a href={sub.path}>{sub.name}</a></li>
                        ))}
                    </ul>
                ):(
                    <a href={nav.path}>{nav.name}</a>                    
                )}
            </li>
          ))}
      </ul>
    </div>
  </div>

  
